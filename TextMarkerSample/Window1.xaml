<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="TextMarkerSample.Window1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
	Title="TextMarkerSample" Height="381" Width="693">
	<DockPanel>
		<ToolBar DockPanel.Dock="Top">
			<Button Content="Add marker at selection" Click="AddMarkerFromSelectionClick" />
			<Button Content="Remove markers at selection" Click="RemoveSelectedClick" />
			<Button Content="Remove all markers" Click="RemoveAllClick" />
		</ToolBar>
		<avalonedit:TextEditor x:Name="textEditor" Margin="8" />
	</DockPanel>
</Window>